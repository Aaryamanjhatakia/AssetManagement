@model List<AssetManagement.Models.VwAssetRequestsAndEmployeeInfo>


@{
    ViewData["Title"] = "Asset Requests";
}

<h1>Asset Requests</h1>


<div class="row">
    <div class="col-md-6 mb-3">
        <form class="d-flex" asp-action="Index" asp-controller="AssetRequests">
            <input name="searchString" class="form-control me-1" type="search" placeholder="Search" aria-label="Search" value="@ViewData["CurrentFilter"]">
            <button class="btn btn-primary" type="submit">Search</button>
        </form>
    </div>
    <div class="col-md-6 mb-3 text-end">
        <a asp-action="Index" class="btn btn-outline-dark">Back to Full List</a>
    </div>
</div>



<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Request ID</th>
            <th>Employee ID</th>
            <th>Asset Name</th>
            <th>Asset Description</th>
            <th>Reason</th>
            <th>Date of Request</th>
            <th>Employee Name</th>
            <th>Phone No</th>
            <th>Email</th>
            <th>Department</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var assetRequest in Model)
        {
            <tr>
                <td>@assetRequest.RequestId</td>
                <td>@assetRequest.EmpId</td>
                <td>@assetRequest.ReqAssetName</td>
                <td>@assetRequest.AssetDescription</td>
                <td>@assetRequest.Reason</td>
                <td>@assetRequest.DateOfRequest.ToShortDateString()</td>
                <td>@assetRequest.EmployeeName</td>
                <td>@assetRequest.PhoneNo</td>
                <td>@assetRequest.Email</td>
                <td>@assetRequest.Department</td>
                <td>
                    <a href="@Url.Action("Assign", "EmployeeHavingAssets", new { EmployeeId = assetRequest.EmpId, RequestId = assetRequest.RequestId })" class="btn btn-primary">Assign</a>
                </td>
            </tr>
        }
    </tbody>
</table>


